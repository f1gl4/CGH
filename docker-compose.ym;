services:
  app:
    build:
      context: .
      dockerfile: .devcontainer/Dockerfile
    volumes:
      - .:/workspaces/gch
    command: sleep infinity
    ports:
      - "8080:8080"  # Spring
      - "5173:5173"  # Vite
    depends_on:
      - db

  db:
    image: postgres:16
    environment:
      POSTGRES_DB: gch
      POSTGRES_USER: gch
      POSTGRES_PASSWORD: gch
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL","pg_isready -U gch -d gch"]
      interval: 5s
      timeout: 5s
      retries: 15
    volumes:
      - pgdata:/var/lib/postgresql/data

volumes:
  pgdata:
